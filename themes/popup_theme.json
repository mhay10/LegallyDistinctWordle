{
  "window": {
    "colours": {
      "dark_bg": "#1e1e20",
      "normal_border": "#3a3a3c"
    },
    "misc": {
      "shape": "rounded_rectangle",
      "shape_corner_radius": "5",
      "border_width": "1",
      "shadow_width": "15"
    }
  },
  "window.#title_bar": {
    "colours": {
      "normal_bg": "#3a3a3c",
      "hovered_bg": "#3a3a3c",
      "normal_border": "#3a3a3c",
      "hovered_border": "#3a3a3c",
      "text": "#ffffff",
      "hovered_text": "#ffffff"
    },
    "misc": {
      "shape": "rounded_rectangle",
      "shape_corner_radius": "5,0,0,0"
    }
  },
  "window.#close_button": {
    "colours": {
      "normal_bg": "#3a3a3c",
      "hovered_bg": "#3a3a3c",
      "normal_border": "#3a3a3c",
      "hovered_border": "#3a3a3c",
      "text": "#ffffff"
    },
    "misc": {
      "shape": "rounded_rectangle",
      "shape_corner_radius": "0,5,0,0",
      "text_horiz_alignment": "center"
    }
  },

  "window.text_box": {
    "colours": {
      "normal_text": "#ffffff",
      "normal_border": "#1e1e20",
      "dark_bg": "#1e1e20"
    },
    "misc": {
      "text_horiz_alignment": "center"
    }
  },
  "window.button": {
    "colours": {
      "normal_bg": "#3a3a3c",
      "hovered_bg": "#3a3a3c",
      "normal_border": "#3a3a3c",
      "normal_text": "#ffffff"
    }
  }
